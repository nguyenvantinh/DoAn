@model WebBanHang.Models.KhachHang
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/ClientLayout.cshtml";
}

<style>
    .block{
        display: block;
    }
</style>
@section jsFooter{
    <script src="/Content/ClientLayout/js/Cart.js"></script>
}
<div class="content">
    <div class="login_panel">
        <h3>Thông tin đăng nhập</h3>
        <p>Nhập thông tin vào form đăng nhập.</p>
        @using (Html.BeginForm("Login", "KhachHang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @*<input name="TaiKhoan" type="text" placeholder="Tài khoản" class="field">*@
            @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "field", @placeholder = "Tài khoản" } })
            @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
            @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "field", @placeholder = "Mật khẩu" } })
            @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
            @*<input name="MatKhau" type="password" placeholder="Mật khẩu" class="field">*@

            <p class="note" style="margin-bottom:8px;">Quên mật khẩu? click <a href="#">here</a></p>
            <div class="buttons">
                <div><button class="grey">Sign In</button></div>
            </div>
        }

    </div>
    <div class="register_account">
        <h3>Tạo mới tài khoản</h3>
        @using (Html.BeginForm("SignUp", "KhachHang", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <table>
                <tbody>
                    <tr>
                        <td>
                            <div>
                                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @placeholder = "Tài khoản", @class = "block" } })
                                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @placeholder = "Mật khẩu", @class = "block" } })
                                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @placeholder = "Họ tên", @class = "block" } })
                                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                            </div>
                        </td>
                        <td>
                            <div>
                                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @placeholder = "Số điện thoại", @class = "block" } })
                                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @placeholder = "Email", type = "text", @class = "block" } })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div>
                                <select name="GioiTinh" id="GioiTinh" style="width: 340px; display:block;" >
                                    <option value="" disabled>Chọn giới tính</option>
                                    <option value="Nam">Nam</option>
                                    <option value="Nữ">Nữ</option>
                                </select>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div>
                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @placeholder = "Địa chỉ", style = "width: 100%;" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
            </div>
            <div class="search">
                <div><button class="grey">Create Account</button></div>
            </div>
            <div class="clear"></div>
         }
        </div>
    <div class="clear"></div>
</div>