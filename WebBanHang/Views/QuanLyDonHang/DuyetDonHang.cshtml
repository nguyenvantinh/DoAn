@using WebBanHang.Models;
@model DonDatHang
@{ 
    ViewBag.Title = "DuyetDonHang";
    Layout = "~/Views/Layout/AdminLayout.cshtml"; 
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    Duyệt đơn hàng
                    <a href="/QuanLyDonHang/ChoDuyet" class="btn btn-primary" style="margin-left: 750px;">Thoát</a>
                </header>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        <div class="ChiTietDonHang table">
                            @{ IEnumerable<ChiTietDonDatHang> lstChiTietDH = (IEnumerable<ChiTietDonDatHang>)ViewBag.ListChiTietDH;}
                            <table class="table" id="table">
                                @*Thông tin đơn hàng*@
                                <tr>
                                    <td>Mã đơn hàng: <b style="color:red">@Model.MaDDH @Html.Hidden("MaDDH", Model.MaDDH)</b></td>
                                    @*<td>Mã khách hàng: <b style="color:red">@Model.KhachHang.MaKhachHang</b></td>*@
                                    <td>Tên khách hàng: <b style="color:red">@Model.KhachHang.HoTen</b></td>
                                    <td>Ngày đặt: @Model.NgayDat.Value.ToString("dd/MM/yyy")</td>
                                    <td>Đã giao: @Html.EditorFor(model => model.TinhTrangGiaoHang)</td>
                                    <td>Đã thanh toán: @Html.EditorFor(model => model.DaThanhToan)</td>
                                </tr>
                                @*Phần chi tiết đơn hàng*@
                                <tr>
                                    <td><b>STT</b></td>
                                    <td><b>Sản phẩm</b></td>
                                    <td><b>Hình ảnh</b></td>
                                    <td><b>Số lượng đặt</b></td>
                                    <td><b>Đơn giá đặt</b></td>
                                </tr>
                                @{ int i = 1; }
                                @foreach (var item in lstChiTietDH)
                                {
                                    <tr>
                                        <td>@i</td>
                                        <td>@item.SanPham.TenSP</td>
                                        <td><img width="120" height="120" src="@Url.Content("~/Content/HinhAnhSP/" + @item.SanPham.HinhAnh)" /></td>
                                        <td>@item.SoLuong</td>
                                        <td>@item.DonGia</td>
                                    </tr>
                                    { i++; }
                                 }
                                    <tr>
                                        <td colspan="5" style="text-align:right;">Tổng số lượng: @Model.ChiTietDonDatHangs.Sum(n => n.SoLuong) sản phẩm</td>
                                    </tr><tr>
                                        <td colspan="5" style="text-align:right;">Tổng tiền: @Model.ChiTietDonDatHangs.Sum(n => n.DonGia * n.SoLuong).Value.ToString("#,##") đồng</td>
                                    </tr>
                            </table>
                            <input type="button" value="In đơn hàng" id="btnInDonHang" />
                            <input type="submit" value="Lưu đơn hàng" id="btnLuuDonHang" />
                        </div>
                    }
                </div>
            </section>
        </div>
    </div>
</div>
<script>
    $("#btnInDonHang").click(function () {
        var content = "<table>"+ $("#table").html() +"</table>";
        InDonHang(content);
    });

    //Phương thức in
    function InDonHang(content)
    {
        var printWindow = window.open('', '', 'height=400,width=800');
        printWindow.document.write('<html><head><title>DIV Contents</title>');
        printWindow.document.write('</head><body >');
        printWindow.document.write(content);
        printWindow.document.write('</body></html>');
        printWindow.document.close();
        printWindow.print();
    }
   
</script>