@model WebBanHang.Models.RegistrationView
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Visitors an Admin Panel Category Bootstrap Responsive Website Tsplate | Registration :: w3layouts</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="keywords" content="Visitors Responsive web tsplate, Bootstrap Web Tsplates, Flat Web Tsplates, Android Compatible web tsplate,
Smartphone Compatible web tsplate, free webdesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design" />
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- bootstrap-css -->
    <link rel="stylesheet" href="~/Content/AdminLayout/css/bootstrap.min.css">
    <!-- //bootstrap-css -->
    <!-- Custom CSS -->
    <link href="~/Content/AdminLayout/css/style.css" rel='stylesheet' type='text/css' />
    <link href="~/Content/AdminLayout/css/style-responsive.css" rel="stylesheet" />
    <!-- font CSS -->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic' rel='stylesheet' type='text/css'>
    <!-- font-awesome icons -->
    <link rel="stylesheet" href="~/Content/AdminLayout/css/font.css" type="text/css" />
    <link href="~/Content/AdminLayout/css/font-awesome.css" rel="stylesheet">
    <!-- //font-awesome icons -->
    <script src="~/Content/AdminLayout/js/jquery2.0.3.min.js"></script>
    <style>
        input.ggg {
            margin: 0px 0px 15px 0;
        }
        .lb {
            color: #fff;
        }
        .w3layouts-main input[type="submit"] {
            margin: 15px auto 0px;
        }
    </style>
</head>
<body>
    <div class="reg-w3">
        <div class="w3layouts-main">
            <h2>Tạo mới tài khoản</h2>
            @using (Html.BeginForm(null, null, FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                <div class="lb">Họ tên</div>
                @Html.EditorFor(model => model.HoTen, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.HoTen, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
                <div class="lb">Email</div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })

                <div class="clearfix"></div>
                <div class="lb">Địa chỉ</div>

                @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
                <div class="lb">Số điện thoại</div>

                @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                @*@Html.ValidationMessage("ErrorEmail", new { @class = "text-danger" })*@

                <div class="clearfix"></div>
                <div class="lb">Username</div>

                @Html.EditorFor(model => model.TaiKhoan, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.TaiKhoan, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
                <div class="lb">Password</div>

                @Html.EditorFor(model => model.MatKhau, new { htmlAttributes = new { @class = "form-control ggg", @required = "required" } })
                @Html.ValidationMessageFor(model => model.MatKhau, "", new { @class = "text-danger" })
                <div class="clearfix"></div>
                <input type="submit" value="Đăng ký" class="btn btn-default" />
            }
        </div>
    </div>
    <script src="~/Content/AdminLayout/js/bootstrap.js"></script>
    <script src="~/Content/AdminLayout/js/jquery.dcjqaccordion.2.7.js"></script>
    <script src="~/Content/AdminLayout/js/scripts.js"></script>
    <script src="~/Content/AdminLayout/js/jquery.slimscroll.js"></script>
    <script src="~/Content/AdminLayout/js/jquery.nicescroll.js"></script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/flot-chart/excanvas.min.js"></script><![endif]-->
    <script src="~/Content/AdminLayout/js/jquery.scrollTo.js"></script>
</body>
</html>
