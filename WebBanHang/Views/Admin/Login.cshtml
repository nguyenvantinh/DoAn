<body>
    <div class="log-w3">
        @using (Html.BeginForm(null, null, new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
        {
            @Html.AntiForgeryToken() // this is for prevent CSRF attack
            @Html.ValidationSummary(false, "", new { @class = "text-danger" });
            <div class="w3layouts-main">
                <h2>Sign In Now</h2>
                <div style="text-align: right;">@ViewBag.LoiDangNhap</div>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control ggg", placeholder = "USERNAME", @required = "required" } })
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control ggg", placeholder = "PASSWORD", @required = "required" } })
                <div class="clearfix"></div>

                <input type="submit" value="Sign In" name="login" style="margin: 25px auto 25px;">
                @*<p>Don't Have an Account ?<a href="registration.html">Create an account</a></p>*@
            </div>

        }
    </div>
    <script src="~/Content/AdminLayout/js/bootstrap.js"></script>
