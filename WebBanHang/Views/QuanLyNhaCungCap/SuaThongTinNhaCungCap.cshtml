@model WebBanHang.Models.NhaCungCap
@{
    ViewBag.Title = "SuaNhaCungCap";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<style>
    .error {
        color: red;
        font-weight: unset;
        font-size: 14px;
    }
</style>
<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    Sửa thông tin nhà cung cấp
                </header>
                <div class="panel-body">
                    <div class="form">
                        @using (Html.BeginForm("SuaThongTinNhaCungCap", "QuanLyNhaCungCap", FormMethod.Post, new { @class = "cmxform form-horizontal " }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(Model=>Model.MaNCC)
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                @*hoten, dc*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.TenNCC, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                    <div class="col-md-4 col-sm-4">
                                        @Html.EditorFor(model => model.TenNCC, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.TenNCC, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.LabelFor(model => model.DiaChi, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                    <div class="col-md-4 col-sm-4">
                                        @Html.EditorFor(model => model.DiaChi, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.DiaChi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                @*// email, sdt*@
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                    <div class="col-md-4 col-sm-4">
                                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                    </div>
                                    @Html.LabelFor(model => model.SoDienThoai, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                                    <div class="col-md-4 col-sm-4">
                                        @Html.EditorFor(model => model.SoDienThoai, new { htmlAttributes = new { @class = "form-control" } })
                                        @Html.ValidationMessageFor(model => model.SoDienThoai, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-12 text-right">
                                <button class="btn btn-primary" type="submit" id="submit">Save</button>
                                <a class="btn btn-default" href="/QuanLyNhaCungCap/Index" id="cancel">Cancel</a>
                            </div>
                        }
                    </div>
                </div>
            </section>
        </div>
    </div>
</div>