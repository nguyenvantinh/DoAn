@model WebBanHang.Models.SanPham
@{
    ViewBag.Title = "XemChiTiet";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<div class="form-w3layouts">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <section class="panel">
                <header class="panel-heading">
                    Chi tiết sản phẩm
                </header>
                <div class="panel-body">
                    @*//left*@
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.TenSP, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.TenSP)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.DonGia, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Model.DonGia.Value.ToString("N0") VND
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.LoaiSanPham.TenLoai, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.LoaiSanPham.TenLoai)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NhaSanXuat.TenNSX, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.NhaSanXuat.TenNSX)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NhaCungCap.TenNCC, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.NhaCungCap.TenNCC)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SoLanMua, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.SoLanMua)
                            </div>
                        </div>
                    </div>
                    @*right*@
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <div class="form-group row">
                            @Html.LabelFor(model => model.SoLuongTon, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.SoLuongTon)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.LuotXem, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.LuotXem)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.NgayCapNhap, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.NgayCapNhap)
                            </div>
                        </div>
                        <div class="form-group row">
                            @Html.LabelFor(model => model.LuotBinhLuan, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.LuotBinhLuan)
                            </div>
                        </div>
                        @*<div class="form-group row">
                            @Html.LabelFor(model => model.Moi, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.Moi)
                            </div>
                        </div>*@
                        <div class="form-group row">
                            @Html.LabelFor(model => model.DaXoa, htmlAttributes: new { @class = "control-label col-md-4 col-sm-2" })
                            <div class="col-md-8 col-sm-4">
                                @Html.DisplayFor(model => model.DaXoa)
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12" style="padding:0;">
                        @Html.LabelFor(model => model.HinhAnh, htmlAttributes: new { @class = "control-label col-md-2 col-sm-2" })
                        <div class="col-md-10 col-sm-10" style="padding:0;">
                            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh)" style="margin:10px; width:75px; height:75px;" />
                            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh1)" style="margin:10px; width:75px; height:75px;" />
                            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh2)" style="margin:10px; width:75px; height:75px;" />
                            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh3)" style="margin:10px; width:75px; height:75px;" />
                            <img src="@Url.Content("~/Content/HinhAnhSP/" + Model.HinhAnh4)" style="margin:10px; width:75px; height:75px;" />
                        </div>
                    </div>
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        <div class="form-group">
                            @Html.LabelFor(model => model.CauHinh, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12 col-sm-12">
                                @Html.Raw(Model.CauHinh)
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MoTa, htmlAttributes: new { @class = "control-label" })
                            <div class="col-md-12 col-sm-12">
                                @Html.Raw(Model.MoTa)
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <div class="col-md-12 text-right" style="padding:0;">
                <button class="btn btn-primary" type="button" id="cancel">Thoát</button>
            </div>
        </div>
    </div>
</div>
<script>
    $("#cancel").on("click", function () {
        window.location.href = "/Admin/QuanLySanPham";
    });
</script>